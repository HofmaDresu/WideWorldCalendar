<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WideWorldCalendar.SelectSchedulePage">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" WinPhone="20,20,20,20" />
	</ContentPage.Padding>
	<StackLayout
		Padding="20, 20, 20, 0">
		<Label Text="Season"/>
		<Picker x:Name="SeasonPicker"
				SelectedIndexChanged="SeasonChanged">
		</Picker>
		<Label Text="League"
        IsVisible="{Binding SeasonSelected}"/>
		<Picker x:Name="LeaguePicker"
        IsVisible="{Binding SeasonSelected}"
				SelectedIndexChanged="LeagueChanged">
		</Picker>
		<Label Text="Division"
        IsVisible="{Binding LeagueSelected}"/>
		<Picker x:Name="DivisionPicker"
        IsVisible="{Binding LeagueSelected}"
				SelectedIndexChanged="DivisionChanged">
		</Picker>
		<Label Text="Team"
        IsVisible="{Binding DivisionSelected}"/>
		<Picker x:Name="TeamPicker"
        IsVisible="{Binding DivisionSelected}"
				SelectedIndexChanged="TeamChanged">
		</Picker>
		<Button Text="Get Schedule"
        IsVisible="{Binding TeamSelected}"
				x:Name="GetScheduleButton"
				HorizontalOptions="Center"/>
    <ActivityIndicator IsRunning="{Binding IsBusy}"></ActivityIndicator>
	</StackLayout>
</ContentPage>
