<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="MyTheme" parent="MyTheme.Base">
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">@color/Primary</item>
		<item name="colorPrimaryDark">@color/PrimarySelected</item>
		<item name="colorAccent">@color/Secondary</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:colorPressedHighlight">@color/PrimarySelected</item>
    <item name="android:colorLongPressedHighlight">@color/PrimarySelected</item>
    <item name="android:colorFocusedHighlight">@color/PrimarySelected</item>
    <item name="android:colorActivatedHighlight">@color/PrimarySelected</item>
    <item name="android:activatedBackgroundIndicator">@color/PrimarySelected</item>
	</style>
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">@color/Secondary</item>
	</style>


  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/Splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>
